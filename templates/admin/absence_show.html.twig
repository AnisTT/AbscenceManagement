{% extends 'base.html.twig' %}

{% block title %}Détails Absence - GestAbsences{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">Détails de l'absence</h1>
            <p class="page-subtitle">
                <a href="{{ path('admin_absences') }}" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                </a>
            </p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('admin_absences_edit', {id: absence.id}) }}" class="btn btn-primary-custom">
                <i class="bi bi-pencil me-1"></i> Modifier
            </a>
            <form action="{{ path('admin_absences_delete', {id: absence.id}) }}" method="POST" class="d-inline" 
                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette absence ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ absence.id) }}">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i> Supprimer
                </button>
            </form>
        </div>
    </div>

    <div class="row g-4">
        <!-- Absence Info -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-x text-primary me-2"></i>
                        Informations de l'absence
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Date</label>
                            <p class="fw-semibold mb-0">{{ absence.dateAbsence|date('d/m/Y') }}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Horaire</label>
                            <p class="fw-semibold mb-0">
                                {% if absence.heureDebut and absence.heureFin %}
                                    {{ absence.heureDebut|date('H:i') }} - {{ absence.heureFin|date('H:i') }}
                                {% else %}
                                    Journée complète
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Matière</label>
                            <p class="fw-semibold mb-0">{{ absence.matiere.nom }}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Statut</label>
                            <p class="mb-0">
                                {% if absence.justifiee %}
                                    <span class="badge badge-justified">
                                        <i class="bi bi-check-circle me-1"></i> Justifiée
                                    </span>
                                {% elseif absence.justification and absence.justification.isEnAttente %}
                                    <span class="badge badge-pending">
                                        <i class="bi bi-hourglass-split me-1"></i> En attente
                                    </span>
                                {% else %}
                                    <span class="badge badge-not-justified">
                                        <i class="bi bi-x-circle me-1"></i> Non justifiée
                                    </span>
                                {% endif %}
                            </p>
                        </div>
                        {% if absence.motif %}
                        <div class="col-12">
                            <label class="form-label text-muted small">Motif</label>
                            <p class="mb-0">{{ absence.motif }}</p>
                        </div>
                        {% endif %}
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Enregistrée le</label>
                            <p class="fw-semibold mb-0">{{ absence.createdAt|date('d/m/Y à H:i') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Student Info -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-person text-primary me-2"></i>
                        Étudiant
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                        <span class="text-primary fw-bold fs-3">
                            {{ absence.etudiant.prenom|first }}{{ absence.etudiant.nom|first }}
                        </span>
                    </div>
                    <h5 class="mb-1">{{ absence.etudiant.nomComplet }}</h5>
                    <p class="text-muted mb-2">{{ absence.etudiant.matricule }}</p>
                    <span class="badge bg-light text-dark">{{ absence.etudiant.classe.nom }}</span>
                    {% if absence.etudiant.email %}
                        <p class="mt-3 mb-0">
                            <a href="mailto:{{ absence.etudiant.email }}" class="text-decoration-none">
                                <i class="bi bi-envelope me-1"></i> {{ absence.etudiant.email }}
                            </a>
                        </p>
                    {% endif %}
                </div>
            </div>

            {% if absence.justification %}
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-file-text text-primary me-2"></i>
                        Justification
                    </h5>
                </div>
                <div class="card-body">
                    <p class="small">{{ absence.justification.description }}</p>
                    <p class="text-muted small mb-0">
                        Soumise le {{ absence.justification.dateSoumission|date('d/m/Y') }}
                    </p>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
