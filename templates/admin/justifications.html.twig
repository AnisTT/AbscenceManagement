{% extends 'base.html.twig' %}

{% block title %}Justifications - GestAbsences{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Flash Messages -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="page-title">Gestion des Justifications</h1>
            <p class="page-subtitle">Validez ou refusez les justifications d'absence</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- En attente -->
        <div class="col-12">
            <div class="table-card">
                <div class="table-header">
                    <h3 class="table-title">
                        <i class="bi bi-hourglass-split text-warning"></i>
                        En attente de validation
                        {% if justificationsEnAttente|length > 0 %}
                            <span class="badge bg-warning text-dark ms-2">{{ justificationsEnAttente|length }}</span>
                        {% endif %}
                    </h3>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-custom">
                        <thead>
                            <tr>
                                <th>Étudiant</th>
                                <th>Classe</th>
                                <th>Date absence</th>
                                <th>Description</th>
                                <th>Pièce jointe</th>
                                <th>Date soumission</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for justification in justificationsEnAttente %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle bg-warning bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="bi bi-person text-warning"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">{{ justification.absence.etudiant.nomComplet }}</div>
                                            <small class="text-muted">{{ justification.absence.etudiant.matricule }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">{{ justification.absence.etudiant.classe.nom }}</span>
                                </td>
                                <td>{{ justification.absence.dateAbsence|date('d/m/Y') }}</td>
                                <td>
                                    <div style="max-width: 200px;">
                                        {{ justification.description|length > 50 ? justification.description|slice(0, 50) ~ '...' : justification.description }}
                                    </div>
                                </td>
                                <td>
                                    {% if justification.pieceJointe %}
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-paperclip"></i> Voir
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Aucune</span>
                                    {% endif %}
                                </td>
                                <td>{{ justification.dateSoumission|date('d/m/Y H:i') }}</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <form action="{{ path('admin_justifications_validate', {id: justification.id}) }}" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-success" title="Valider">
                                                <i class="bi bi-check-lg"></i> Valider
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-danger" title="Refuser" 
                                                data-bs-toggle="modal" data-bs-target="#refuseModal{{ justification.id }}">
                                            <i class="bi bi-x-lg"></i> Refuser
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            
                            <!-- Refuse Modal -->
                            <div class="modal fade" id="refuseModal{{ justification.id }}" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header border-0">
                                            <h5 class="modal-title">
                                                <i class="bi bi-x-circle text-danger me-2"></i>
                                                Refuser la justification
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form action="{{ path('admin_justifications_refuse', {id: justification.id}) }}" method="POST">
                                            <div class="modal-body">
                                                <p>Vous allez refuser la justification de <strong>{{ justification.absence.etudiant.nomComplet }}</strong> 
                                                   pour l'absence du <strong>{{ justification.absence.dateAbsence|date('d/m/Y') }}</strong>.</p>
                                                <div class="mb-3">
                                                    <label class="form-label">Commentaire (optionnel)</label>
                                                    <textarea class="form-control" name="commentaire" rows="3" 
                                                              placeholder="Raison du refus..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer border-0">
                                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-x-lg me-1"></i> Confirmer le refus
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-check-circle fs-1 d-block mb-2 text-success"></i>
                                        Aucune justification en attente
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Récemment traitées -->
        <div class="col-12">
            <div class="table-card">
                <div class="table-header">
                    <h3 class="table-title">
                        <i class="bi bi-clock-history text-secondary"></i>
                        Récemment traitées
                    </h3>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-custom">
                        <thead>
                            <tr>
                                <th>Étudiant</th>
                                <th>Date absence</th>
                                <th>Statut</th>
                                <th>Traité par</th>
                                <th>Date validation</th>
                                <th>Commentaire</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for justification in justificationsTraitees %}
                            <tr>
                                <td>
                                    <div class="fw-semibold">{{ justification.absence.etudiant.nomComplet }}</div>
                                </td>
                                <td>{{ justification.absence.dateAbsence|date('d/m/Y') }}</td>
                                <td>
                                    {% if justification.isValidee %}
                                        <span class="badge badge-justified">
                                            <i class="bi bi-check-circle me-1"></i> Validée
                                        </span>
                                    {% else %}
                                        <span class="badge badge-not-justified">
                                            <i class="bi bi-x-circle me-1"></i> Refusée
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if justification.validePar %}
                                        {{ justification.validePar.nomComplet }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>{{ justification.dateValidation|date('d/m/Y H:i') }}</td>
                                <td>{{ justification.commentaireValidation ?? '-' }}</td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">
                                    Aucune justification traitée récemment
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
